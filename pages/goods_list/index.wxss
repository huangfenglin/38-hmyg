.goods_view .goods_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 0;
}
.goods_view .goods_item .img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_view .goods_item .img_wrap image {
  width: 70%;
}
.goods_view .goods_item .goods_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  overflow: hidden;
}
.goods_view .goods_item .goods_info .goods_name {
  color: #666;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.goods_view .goods_item .goods_info .goods_price {
  color: var(--themeColor);
  font-size: 30rpx;
}
